# Local Database Configuration (ONLY for RAG content: blogs, videos, embeddings, sync state)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=josh_rag
DB_USER=postgres
DB_PASSWORD=your_password_here

# Production Database Configuration (REQUIRED - READ-ONLY access for all product data)
# The RAG system reads product/config/property data DIRECTLY from production database
# No syncing needed - always up-to-date with live product data
PROD_DB_HOST=your_rds_host.rds.amazonaws.com
PROD_DB_PORT=5432
PROD_DB_NAME=your_prod_db_name
PROD_DB_USER=postgres
PROD_DB_PASSWORD=your_prod_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RAG Configuration
EMBEDDING_MODEL=intfloat/e5-base-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5
RAG_CONFIDENCE_THRESHOLD=0.75

# Content date threshold: only use content on or after this date for recommendations.
# Set CONTENT_MIN_PUBLISH_DATE (YYYY-MM-DD) or CONTENT_MAX_AGE_YEARS (e.g. 2 = last 2 years).
# Leave unset to use all content.
# CONTENT_MIN_PUBLISH_DATE=2024-01-01
CONTENT_MAX_AGE_YEARS=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_KEY=your_secure_api_key_here

# Environment
ENVIRONMENT=development

# Sanity CMS Configuration
SANITY_PROJECT_ID=your_project_id
SANITY_DATASET=production
SANITY_API_TOKEN=your_read_token
SANITY_API_VERSION=2023-05-03
SANITY_WEBHOOK_SECRET=your_webhook_secret_optional

AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# OpenAI Configuration (for natural language intent extraction)
OPENAI_API_KEY=your_openai_api_key

# Gemini Configuration (REQUIRED for RAG answer generation, test data parsing, and sentiment analysis)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-3-flash-preview

# Sentiment Analysis Configuration
SENTIMENT_ENABLED=true